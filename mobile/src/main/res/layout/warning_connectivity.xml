<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/warningConnectivity" android:layout_gravity="center_horizontal" xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ffffff"
    >

    <TextView
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textViewWarningConnectivity"
        android:layout_weight="0.06" />
    <Button
        android:layout_gravity="center"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:text="Fermer"
        android:id="@+id/buttonWarningConnectivity"
        android:layout_weight="0.06" />

</LinearLayout>