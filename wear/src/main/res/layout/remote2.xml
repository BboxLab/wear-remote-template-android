<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/remote1"/>

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/v_plus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/hidden_buttons"
                android:background="@color/hidden_buttons"/>

            <Button
                android:id="@+id/p_plus"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/hidden_buttons"
                android:background="@color/hidden_buttons"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2">

            <Button
                android:id="@+id/p_moins"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/hidden_buttons"
                android:background="@color/hidden_buttons" />

            <Button
                android:id="@+id/v_moins"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textColor="@color/hidden_buttons"
                android:background="@color/hidden_buttons" />


        </LinearLayout>
    </LinearLayout>

    <android.support.wearable.view.CircledImageView
        android:id="@+id/power"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:circle_radius="60dp"
        />
    <!--
        tools:src="@drawable/ic_power"
        app:circle_color="#06c303"
        -->

    <ImageView
        android:id="@+id/mute_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/mute"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <android.support.wearable.view.CircledImageView
        android:id="@+id/mute"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/ic_mute"
        app:circle_radius="60dp" />

    <!--<android.support.wearable.view.CircledImageView
        android:id="@+id/mute"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:src="@drawable/ic_mute"
        app:circle_radius="60dp"
        android:visibility="gone"/>-->
    <!--app:circle_color="#00b5d8"-->

    <RelativeLayout
        android:id="@+id/splashscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="visible">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo_bbox_miami"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>