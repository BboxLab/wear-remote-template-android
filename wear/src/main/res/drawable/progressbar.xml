<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#fff3f3f3"
                android:centerColor="#ff454545"
                android:centerY="0.75"
                android:endColor="#fff3f3f3"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#80ffd300"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item><!-- TODO: remplacer les ff Ã  la fin de chaque couleur par 00-->
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#800065a6"
                    android:endColor="#a000b5d8"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>